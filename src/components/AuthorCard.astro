---
import { AUTHORS } from '../consts';
import Placeholder from '../../public/pfps/placeholder.png';

type Props = {
  author: string;
};

const { author } = Astro.props;
const authorData = AUTHORS[author];
---
<div class="author-card">
  <img width="100" height="100" alt="" src={authorData.pfp ? `/pfps/${author}.png` : Placeholder.img} />
  <div class="card-text">
    <h4>{authorData.name}</h4>
    <div class="social-links">
      {authorData.twitter &&
        <a href=`https://x.com/${authorData.twitter}`>
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/twitter">
            <path fill="rgb(var(--gray))" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"></path>
          </svg>
        </a>
      }
    </div>
    <p>{authorData.bio}</p>
  </div>
</div>

<style>
  .author-card {
    border: 1px solid #bbb;
    border-radius: 10px;
    padding: 20px;
    background-color: #dfdfdf;
    display: flex;
    align-items: center;
    gap: 1rem;
    max-width: 60%;
    margin: 0 20px 20px 20px;
    line-height: 0.5;
  }
  .social-links {
    display: flex;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
  }
  .social-links a:hover {
    color: rgb(var(--gray-dark));
  }
  p {
    line-height: 1;
  }
</style>

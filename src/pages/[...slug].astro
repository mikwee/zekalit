---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';  // your layout

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },  // or post.slug if you defined custom slugs
    props: { post },            // ‚Üê pass full entry (best practice)
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;  // now typed!
const { Content } = await render(post);
---

<BlogPost post={post}>
  <Content />
</BlogPost>
